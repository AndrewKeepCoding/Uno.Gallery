<Page x:Class="Uno.Gallery.Views.Samples.FabSamplePage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:controls="using:Uno.Gallery.Controls"
	  xmlns:local="using:Uno.Gallery.Views.Samples"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  mc:Ignorable="d"
	  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<controls:SamplePageLayout Title="{Binding Title}"
								   Description="{Binding Description}"
								   Mode="Material">

			<controls:SamplePageLayout.DefaultTemplate>
				<DataTemplate>
					<ScrollViewer Margin="12"
								  Padding="12">
						<StackPanel>

							<!--TODO 188666 add default samples?-->
						</StackPanel>
					</ScrollViewer>
				</DataTemplate>
			</controls:SamplePageLayout.DefaultTemplate>

			<controls:SamplePageLayout.MaterialTemplate>
				<DataTemplate>
					<ScrollViewer Margin="12"
								  Padding="12">
						<StackPanel>

							<controls:SnippetView Title="With Icon">
								<!-- Known Issue, ElevatedView adds white border around fab in WASM -->
								<Button Style="{StaticResource FabMaterialButtonStyle}">
									<Path Data="M19 13 13 13 13 19 11 19 11 13 5 13 5 11 11 11 11 5 13 5 13 11 19 11z"
										  Fill="{StaticResource FabIconColor}"
										  HorizontalAlignment="Center"
										  VerticalAlignment="Center"
										  Margin="0,0,6,4"/>
								</Button>
							</controls:SnippetView>

							<controls:SnippetView Title="With Icon and Label">
								<Button Style="{StaticResource FabLabelMaterialButtonStyle}">
									<StackPanel Orientation="Horizontal">
										<Path Data="M19 13 13 13 13 19 11 19 11 13 5 13 5 11 11 11 11 5 13 5 13 11 19 11z"
											  Fill="{StaticResource FabIconColor}"
											  HorizontalAlignment="Center"
											  VerticalAlignment="Center"
											  Margin="12,0,16,3" />
										<TextBlock Text="CREATE"
												   Foreground="{StaticResource FabLabelColor}"
												   FontWeight="SemiBold"
												   Margin="0,4,16,0" />
									</StackPanel>
								</Button>
							</controls:SnippetView>
						</StackPanel>
					</ScrollViewer>
				</DataTemplate>
			</controls:SamplePageLayout.MaterialTemplate>
		</controls:SamplePageLayout>
	</Grid>
</Page>
