<UserControl x:Class="Uno.Gallery.Shell"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:muxc="using:Microsoft.UI.Xaml.Controls">

	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="../Styles/SamplePageLayout.xaml" />
				<ResourceDictionary Source="../Styles/SnippetView.xaml" />
			</ResourceDictionary.MergedDictionaries>						
		</ResourceDictionary>
	</UserControl.Resources>

	<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

		<Grid.RowDefinitions>
			<RowDefinition x:Name="TopPaddingRow"
						   Height="0" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<!-- We set CompactModeThresholdWidth to a very high value so that it never happens. We don't want to use the compact mode.-->
		<NavigationView x:Name="NavigationViewControl"
						Style="{StaticResource MaterialNavigationViewStyle}"
						OpenPaneLength="220"
						CompactPaneLength="0"
						ExpandedModeThresholdWidth="600"
						CompactModeThresholdWidth="100000"
						IsBackButtonVisible="Collapsed"
						IsBackEnabled="False"
						IsTabStop="False"
						Grid.Row="1" />
	</Grid>
</UserControl>
