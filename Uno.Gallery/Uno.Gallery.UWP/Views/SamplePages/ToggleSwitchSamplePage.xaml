<Page x:Class="Uno.Gallery.Views.Samples.ToggleSwitchSamplePage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:local="using:Uno.Gallery"
	  xmlns:smtx="using:ShowMeTheXAML"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  mc:Ignorable="d">

	<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<local:SamplePageLayout>

			<local:SamplePageLayout.FluentTemplate>
				<DataTemplate>
					<smtx:XamlDisplay UniqueKey="ToggleSwitchSamplePage_Fluent"
									  smtx:XamlDisplayExtensions.Header="Default"
									  smtx:XamlDisplayExtensions.IgnorePath="XamlDisplay\StackPanel\StackPanel">
						<StackPanel>
							<Grid Visibility="{Binding ElementName=HiddenLevel, Path=IsOn}">
								<Grid.RowDefinitions>
									<RowDefinition Height="Auto" />
									<RowDefinition Height="Auto" />
								</Grid.RowDefinitions>

								<Border Grid.Row="0"
										Background="#E2068C"
										CornerRadius="15"
										Margin="70,0,0,0"
										Padding="10"
										HorizontalAlignment="Left"
										VerticalAlignment="Top">
									<TextBlock TextWrapping="WrapWholeWords"
											   FontSize="20"
											   Foreground="White">
										<Run Text="Congrats, you've uncovered the passcode for DotNetConf Treasure Hunt." />
										<LineBreak />
										<Run Text="Please provide" />
										<Span xml:space="preserve"><Run Text="&quot;" /><Run FontWeight="Bold"
												 Text="{Binding ElementName=HiddenLevel, Path=IsOn, Converter={StaticResource Secret}}" /><Run Text="&quot;" /></Span>
										<Run Text="passcode to dotnet bot." />
									</TextBlock>
								</Border>
								<Polygon Grid.Row="1"
										 Points="20,0 15,15, 16,16 18,16 19,15 40,0"
										 Fill="#E2068C"
										 Margin="65,0,0,70"
										 VerticalAlignment="Top" />

								<Image Grid.Row="0"
									   Grid.RowSpan="2"
									   Source="ms-appx:///Assets/DotnetBot.png"
									   Width="100"
									   Margin="0,0,0,0"
									   HorizontalAlignment="Left"
									   VerticalAlignment="Bottom" />
							</Grid>
							<StackPanel Spacing="20">
								<ToggleSwitch x:Name="HiddenLevel"
											  Header="OFF"
											  Foreground="{StaticResource MaterialOnBackgroundBrush}" />
								<ToggleSwitch Header="ON"
											  Foreground="{StaticResource MaterialOnBackgroundBrush}"
											  IsOn="True" />
								<ToggleSwitch Header="DISABLED OFF"
											  IsEnabled="False" />
								<ToggleSwitch Header="DISABLED ON"
											  IsEnabled="False"
											  IsOn="True" />
							</StackPanel>
						</StackPanel>
					</smtx:XamlDisplay>
				</DataTemplate>
			</local:SamplePageLayout.FluentTemplate>

			<local:SamplePageLayout.MaterialTemplate>
				<DataTemplate>
					<StackPanel>

						<smtx:XamlDisplay UniqueKey="ToggleSwitchSamplePage_Material"
										  smtx:XamlDisplayExtensions.Header="Default">
							<StackPanel Spacing="20">

								<ToggleSwitch Header="OFF"
											  Style="{StaticResource MaterialToggleSwitchStyle}" />

								<ToggleSwitch Header="ON"
											  Style="{StaticResource MaterialToggleSwitchStyle}"
											  IsOn="True" />

								<ToggleSwitch Header="DISABLED OFF"
											  Style="{StaticResource MaterialToggleSwitchStyle}"
											  IsEnabled="False" />

								<ToggleSwitch Header="DISABLED ON"
											  Style="{StaticResource MaterialToggleSwitchStyle}"
											  IsEnabled="False"
											  IsOn="True" />
							</StackPanel>
						</smtx:XamlDisplay>

						<smtx:XamlDisplay UniqueKey="ToggleSwitchSamplePage_Material_Secondary"
										  smtx:XamlDisplayExtensions.Header="Secondary">
							<StackPanel Spacing="20">

								<ToggleSwitch Header="OFF"
											  Style="{StaticResource MaterialSecondaryToggleSwitchStyle}" />

								<ToggleSwitch Header="ON"
											  Style="{StaticResource MaterialSecondaryToggleSwitchStyle}"
											  IsOn="True" />

								<ToggleSwitch Header="DISABLED OFF"
											  Style="{StaticResource MaterialSecondaryToggleSwitchStyle}"
											  IsEnabled="False" />

								<ToggleSwitch Header="DISABLED ON"
											  Style="{StaticResource MaterialSecondaryToggleSwitchStyle}"
											  IsEnabled="False"
											  IsOn="True" />
							</StackPanel>
						</smtx:XamlDisplay>
					</StackPanel>
				</DataTemplate>
			</local:SamplePageLayout.MaterialTemplate>

			<local:SamplePageLayout.NativeTemplate>
				<DataTemplate>
					<StackPanel>

						<smtx:XamlDisplay UniqueKey="ToggleSwitchSamplePage_Native"
										  smtx:XamlDisplayExtensions.Header="Default">
							<StackPanel Spacing="20">

								<TextBlock Text="Enabled" />

								<ToggleSwitch Style="{StaticResource NativeDefaultToggleSwitch}" />

								<ToggleSwitch Style="{StaticResource NativeDefaultToggleSwitch}"
											  IsOn="True" />

								<TextBlock Text="Disabled" />

								<ToggleSwitch Style="{StaticResource NativeDefaultToggleSwitch}"
											  IsEnabled="False" />

								<ToggleSwitch Style="{StaticResource NativeDefaultToggleSwitch}"
											  IsEnabled="False"
											  IsOn="True" />
							</StackPanel>
						</smtx:XamlDisplay>
					</StackPanel>
				</DataTemplate>
			</local:SamplePageLayout.NativeTemplate>
		</local:SamplePageLayout>
	</Grid>
</Page>
