<Page x:Class="Uno.Gallery.Views.Samples.ElevatedViewSamplePage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:local="using:Uno.Gallery"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  xmlns:smtx="using:ShowMeTheXAML"
	  xmlns:toolkit="using:Uno.UI.Toolkit"
	  mc:Ignorable="d">

	<Grid Background="{StaticResource MaterialBackgroundBrush}">
		<local:SamplePageLayout>
			<local:SamplePageLayout.MaterialTemplate>
				<DataTemplate>
					<StackPanel>

						<!-- Contained Buttons -->
						<smtx:XamlDisplay UniqueKey="ElevatedViewSamplePage_MaterialContained"
										  smtx:XamlDisplayExtensions.IgnorePath="XamlDisplay\StackPanel">
							<StackPanel Spacing="20">

								<toolkit:ElevatedView Elevation="1"
													  Background="{StaticResource MaterialSurfaceBrush}">
									<Grid Height="50">

										<!-- Elevation Value -->
										<TextBlock Text="01 dp"
												   Style="{StaticResource MaterialOverline}"
												   VerticalAlignment="Bottom"
												   Opacity="0.75"
												   Margin="8" />
									</Grid>
								</toolkit:ElevatedView>

								<toolkit:ElevatedView Elevation="2"
													  Background="{StaticResource MaterialSurfaceBrush}">
									<Grid Height="50">

										<!-- Elevation Value -->
										<TextBlock Text="02 dp"
												   Style="{StaticResource MaterialOverline}"
												   VerticalAlignment="Bottom"
												   Opacity="0.75"
												   Margin="8" />
									</Grid>
								</toolkit:ElevatedView>

								<toolkit:ElevatedView Elevation="3"
													  Background="{StaticResource MaterialSurfaceBrush}">
									<Grid Height="50">

										<!-- Elevation Value -->
										<TextBlock Text="03 dp"
												   Style="{StaticResource MaterialOverline}"
												   VerticalAlignment="Bottom"
												   Opacity="0.75"
												   Margin="8" />
									</Grid>
								</toolkit:ElevatedView>

								<toolkit:ElevatedView Elevation="4"
													  Background="{StaticResource MaterialSurfaceBrush}">
									<Grid Height="50">

										<!-- Elevation Value -->
										<TextBlock Text="04 dp"
												   Style="{StaticResource MaterialOverline}"
												   VerticalAlignment="Bottom"
												   Opacity="0.75"
												   Margin="8" />
									</Grid>
								</toolkit:ElevatedView>

								<toolkit:ElevatedView Elevation="6"
													  Background="{StaticResource MaterialSurfaceBrush}">
									<Grid Height="50">

										<!-- Elevation Value -->
										<TextBlock Text="06 dp"
												   Style="{StaticResource MaterialOverline}"
												   VerticalAlignment="Bottom"
												   Opacity="0.75"
												   Margin="8" />
									</Grid>
								</toolkit:ElevatedView>

								<toolkit:ElevatedView Elevation="8"
													  Background="{StaticResource MaterialSurfaceBrush}">
									<Grid Height="50">

										<!-- Elevation Value -->
										<TextBlock Text="08 dp"
												   Style="{StaticResource MaterialOverline}"
												   VerticalAlignment="Bottom"
												   Opacity="0.75"
												   Margin="8" />
									</Grid>
								</toolkit:ElevatedView>

								<toolkit:ElevatedView Elevation="9"
													  Background="{StaticResource MaterialSurfaceBrush}">
									<Grid Height="50">

										<!-- Elevation Value -->
										<TextBlock Text="09 dp"
												   Style="{StaticResource MaterialOverline}"
												   VerticalAlignment="Bottom"
												   Opacity="0.75"
												   Margin="8" />
									</Grid>
								</toolkit:ElevatedView>

								<toolkit:ElevatedView Elevation="12"
													  Background="{StaticResource MaterialSurfaceBrush}">
									<Grid Height="50">

										<!-- Elevation Value -->
										<TextBlock Text="12 dp"
												   Style="{StaticResource MaterialOverline}"
												   VerticalAlignment="Bottom"
												   Opacity="0.75"
												   Margin="8" />
									</Grid>
								</toolkit:ElevatedView>

								<toolkit:ElevatedView Elevation="16"
													  Background="{StaticResource MaterialSurfaceBrush}">
									<Grid Height="50">

										<!-- Elevation Value -->
										<TextBlock Text="16 dp"
												   Style="{StaticResource MaterialOverline}"
												   VerticalAlignment="Bottom"
												   Opacity="0.75"
												   Margin="8" />
									</Grid>
								</toolkit:ElevatedView>
							</StackPanel>
						</smtx:XamlDisplay>
					</StackPanel>
				</DataTemplate>
			</local:SamplePageLayout.MaterialTemplate>
		</local:SamplePageLayout>
	</Grid>
</Page>
