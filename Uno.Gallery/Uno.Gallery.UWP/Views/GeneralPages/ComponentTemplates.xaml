<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
					xmlns:extensions="using:Uno.Material.Extensions"
					xmlns:todo="what should be done"
					xmlns:material="using:Uno.Material.Controls"
					mc:Ignorable="todo">

	<DataTemplate x:Key="TodoExampleTemplate">
		<TextBlock Text="TODO" />
	</DataTemplate>

	<!-- Material -->
	<DataTemplate x:Key="MaterialBottomNavigationBarExampleTemplate">
		<material:BottomNavigationBar>
			<material:BottomNavigationBar.Items>
				<material:BottomNavigationBarItem Label="Favorites">
					<material:BottomNavigationBarItem.Icon>
						<SymbolIcon Symbol="Favorite" />
					</material:BottomNavigationBarItem.Icon>
				</material:BottomNavigationBarItem>
				<material:BottomNavigationBarItem Label="Search">
					<material:BottomNavigationBarItem.Icon>
						<SymbolIcon Symbol="Find" />
					</material:BottomNavigationBarItem.Icon>
				</material:BottomNavigationBarItem>
			</material:BottomNavigationBar.Items>
		</material:BottomNavigationBar>
	</DataTemplate>
	<DataTemplate x:Key="MaterialButtonExampleTemplate">
		<StackPanel Spacing="8">
			<Button Content="Button1"
					Style="{StaticResource MaterialContainedButtonStyle}" />
			<Button Content="Button2"
					Style="{StaticResource MaterialOutlinedButtonStyle}" />
			<Button Content="Button3"
					Style="{StaticResource MaterialTextButtonStyle}" />
		</StackPanel>
	</DataTemplate>
	<DataTemplate x:Key="MaterialCheckBoxExampleTemplate">
		<StackPanel Spacing="8">
			<CheckBox Content="Checked"
					  IsChecked="True"
					  Style="{StaticResource MaterialCheckBoxStyle}" />
			<CheckBox Content="Unchecked"
					  IsChecked="False"
					  Style="{StaticResource MaterialCheckBoxStyle}" />
			<CheckBox Content="Indeterminate"
					  IsChecked="{x:Null}"
					  IsThreeState="True"
					  Style="{StaticResource MaterialCheckBoxStyle}" />
		</StackPanel>
	</DataTemplate>
	<DataTemplate x:Key="MaterialComboBoxExampleTemplate">
		<StackPanel Spacing="8">
			<ComboBox PlaceholderText="Select ..."
					  Style="{StaticResource MaterialComboBoxStyle}">
				<ComboBoxItem>Apple</ComboBoxItem>
				<ComboBoxItem>Banana</ComboBoxItem>
				<ComboBoxItem>Cactus</ComboBoxItem>
			</ComboBox>
		</StackPanel>
	</DataTemplate>
	<DataTemplate x:Key="MaterialFabExampleTemplate">
		<StackPanel Spacing="8">
			<Button Style="{StaticResource MaterialFabStyle}">
				<extensions:ControlExtensions.Icon>
					<SymbolIcon Symbol="Add" />
				</extensions:ControlExtensions.Icon>
			</Button>
			<Button Content="Create"
					Style="{StaticResource MaterialFabStyle}" />
			<Button Content="Create"
					Style="{StaticResource MaterialFabStyle}">
				<extensions:ControlExtensions.Icon>
					<SymbolIcon Symbol="Add" />
				</extensions:ControlExtensions.Icon>
			</Button>
		</StackPanel>
	</DataTemplate>
	<DataTemplate x:Key="MaterialPasswordBoxExampleTemplate">
		<StackPanel Spacing="8">
			<PasswordBox PlaceholderText="Enter password"
						 Style="{StaticResource MaterialFilledPasswordBoxStyle}" />
			<PasswordBox PlaceholderText="Confirm password"
						 Style="{StaticResource MaterialOutlinedPasswordBoxStyle}" />
		</StackPanel>
	</DataTemplate>
	<DataTemplate x:Key="MaterialRadioButtonExampleTemplate">
		<StackPanel Spacing="8">
			<RadioButton Content="Checked"
						 Style="{StaticResource MaterialRadioButtonStyle}"
						 IsChecked="True" />
			<RadioButton Content="Unchecked"
						 Style="{StaticResource MaterialRadioButtonStyle}" />
		</StackPanel>
	</DataTemplate>
	<DataTemplate x:Key="MaterialShapeExampleTemplate">
		<StackPanel Spacing="8"
					HorizontalAlignment="Left">
			<Ellipse Width="50"
					 Height="50"
					 Fill="SkyBlue" />
			<Rectangle Height="50"
					   Width="50"
					   RadiusX="10"
					   RadiusY="10"
					   Fill="SlateBlue" />
			<Polygon Width="50"
					 Fill="PaleGreen"
					 Stretch="Uniform"
					 Points="98,118,122,130,117,104,136,86,110,82,98,58,86,82,60,86,79,104,74,130,98,118" />
			<Path Width="50"
				  Fill="Crimson"
				  Stretch="Uniform"
