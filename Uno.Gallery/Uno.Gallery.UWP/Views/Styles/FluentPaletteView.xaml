<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Uno.Gallery.Controls">

	<!-- Labels inside the Fluent Palette. So using styles from WinUI -->
	<Style TargetType="TextBlock"
			   x:Key="AccentColorLabel"
			   BasedOn="{StaticResource BaseTextBlockStyle}">
		<Style.Setters>
			<Setter Property="VerticalAlignment"
						Value="Center"/>
			<Setter Property="HorizontalAlignment"
						Value="Center"/>
		</Style.Setters>
	</Style>

	<Style TargetType="controls:FluentColorAccentView">
		<Style.Setters>
			<Setter Property="Height"
					Value="80"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="controls:FluentColorAccentView">
						<Grid Background="{TemplateBinding Background}">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="220"/>
								<ColumnDefinition Width="*"/>
								<ColumnDefinition Width="3*"/>
							</Grid.ColumnDefinitions>
							<TextBlock Style="{StaticResource AccentColorLabel}"
									   Text="{TemplateBinding ColorName}"
									   Grid.Column="0"/>
							<ContentPresenter ContentTemplate="{TemplateBinding DescriptiveContent}"
										  Grid.Column="2"
										  Foreground="{TemplateBinding Foreground}"
										  HorizontalAlignment="Stretch"
										  HorizontalContentAlignment="Left"
										  VerticalAlignment="Center"
										  VerticalContentAlignment="Center"
										  Margin="16,0"/>
						</Grid>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style.Setters>
	</Style>
</ResourceDictionary>
