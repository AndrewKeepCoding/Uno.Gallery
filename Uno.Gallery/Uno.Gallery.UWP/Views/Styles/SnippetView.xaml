<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:controls="using:Uno.Gallery.Controls">

	<Style x:Key="DefaultSnippetViewStyle"
		   TargetType="controls:SnippetView">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="controls:SnippetView">
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition Height="auto" />
							<RowDefinition Height="*" />
						</Grid.RowDefinitions>

						<TextBlock Text="{TemplateBinding Title}" />
						
						<!-- TODO #188326 Add the control that displays the xaml code -->
						<ContentPresenter x:Name="ContentPresenter"
										  Content="{TemplateBinding Content}"
										  ContentTemplate="{TemplateBinding ContentTemplate}"
										  VerticalAlignment="Stretch"
										  HorizontalAlignment="Stretch"
										  Grid.Row="1" />
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style TargetType="controls:SnippetView"
		   BasedOn="{StaticResource DefaultSnippetViewStyle}" />
</ResourceDictionary>
